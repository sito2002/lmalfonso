<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ciudadanos [
    <!ELEMENT ciudadanos (persona+, animal?)>
    <!ELEMENT persona (nombre,mayor_de_edad?,ciudad)>
    <!ELEMENT animal (nombre, vacunas)>
    <!ELEMENT vacunas (vacuna)>
    <!ELEMENT vacuna (#PCDATA)>
