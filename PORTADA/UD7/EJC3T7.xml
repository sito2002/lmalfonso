      <ciudad codigo_postal="14550">Montilla</ciudad>
    </persona>
    <animal raza="perro">
      <nombre>Chustas</nombre>
      <vacunas>
        <vacuna id="1" fecha="2019">Rabia</vacuna>
      </vacunas>
    </animal>
</ciudadanos>